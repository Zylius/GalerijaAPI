<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
    <div class="slides"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    <a class="close">×</a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>
<div class="container container-fluid">
    <hr/>
    {% block top_navigation %}
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% block page_head %}
                        <a class="navbar-brand" href="{{ path('galerija_frontend_homepage') }}">Galerija</a>
                    {% endblock %}
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav pull-left">
                        {% block top_links %}
                            <li class="{% if app.request.attributes.get('_route') ==  'galerija_frontend_homepage'%}active{% endif %}">
                                <a href="{{ path('galerija_frontend_homepage') }}">{{ "Home" | trans }}</a>
                            </li>
                            <li class="pull-right {% if app.request.attributes.get('_route') ==  'galerija_dropbox'%}active{% endif %}">
                                <a href="{{ path('galerija_dropbox') }}" {% if image_storage.getStorageId() != 'local' %} style="color: green" {% endif %}>{{ "Dropbox" | trans }}</a>
                            </li>
                        {% endblock %}
                    </ul>
                    <ul class="nav navbar-nav pull-right">
                        {% block top_links_right %}
                        {% endblock %}
                    </ul>
                </div>
            </div>
        </nav>
    {% endblock %}
    {% block content_wrapper %}{% endblock %}
    <hr/>
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{% if type == 'error'  %}danger{% else %}success{% endif %}">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
    <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="http://malsup.github.com/jquery.form.js"></script>
    {% block javascripts %}{% endblock %}
</div>
</body>
</html>